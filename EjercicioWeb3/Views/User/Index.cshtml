@model EjercicioWeb3.Models.UserAdminViewModel
@{
    Layout = null;
}

<!doctype html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">

    <title>Administraci&oacute;n de Usuarios</title>
</head>
<body>
    <h1>Administracion de Usuarios</h1>

    <div class="card col-6">
        @using (Html.BeginForm("Buscar", "User", FormMethod.Post, new { @class = "form", role = "form", @id = "SearchForm" }))
        {
            @Html.AntiForgeryToken()
            <label for="Busqueda"><b>Búsqueda</b></label>
            @Html.TextBoxFor(m => m.Busqueda, new { @class = "form-control", type = "text", @autocomplete = "off", placeholder = "Usuario o Correo", @required = "required" })
            <button type="submit" class="btn btn-primary">Buscar</button>
            @Html.ActionLink("Agregar", "AgregarUsuario", "User", new { @class = "btn btn-info" })
        }
    </div>
    <br/><br />
    <div class="card">
        <table id="tblResultados" class="table">
            <thead>
                <tr>
                    <th>Correo</th>
                    <th>Nombre completo</th>
                    <th>Rol</th>
                    <th>Fecha de Creación</th>
                    <th>Editar</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var usuario in Model.Usuarios)
                {
                    <tr>
                        <td>@usuario.Email</td>
                        <td>@usuario.Nombre</td>
                        <td>@usuario.NombreRol</td>
                        <td>Fecha de Creación</td>
                        <td>Editar</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>


    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.14.7/dist/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>

    <script type="text/javascript">
        function Test() {
            alert('hi');
        }
    </script>

</body>
</html>
